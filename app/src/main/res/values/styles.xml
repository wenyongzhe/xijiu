    <!-- 自定义ProgressDialog -->
    <style name="CustomDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
    </style>

    <!-- 自定义ProgressDialog -->
    <style name="progressDialog" parent="@style/CustomDialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>
    <!-- 无数据显示style-->
    <style name="no_data_textview_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/mid_gray</item>
        <item name="android:textSize">@dimen/font20</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:drawableTop">@drawable/bg_no_data</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:text">@string/no_data</item>
    </style>
    <!-- 红色水平分割线 -->
    <style name="horizontal_red_divider_line_style">
        <item name="android:layout_width" >match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/red</item>
    </style>
    <!-- 灰色水平分割线 -->
    <style name="horizontal_gray_divider_line_style">
        <item name="android:layout_width" >match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/divide_line</item>
    </style>
