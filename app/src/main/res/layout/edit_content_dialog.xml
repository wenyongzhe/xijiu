<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_custom_dialog"
    android:orientation="vertical">

    <TextView
        android:id="@+id/dialogTitleText"
        style="@style/text_size_16_black_style"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:text="@string/new_warm_prompt"
        android:gravity="center_horizontal"/>


       <EditText 
           android:id="@+id/contentEdit"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:minHeight="50dp"
           android:textSize="@dimen/font15"
           android:layout_margin="15dp"
           android:textColor="@color/black"
           android:textColorHint="@color/mid_gray"
           android:background="@drawable/bg_edit_input"
           android:hint="@string/input_reason"
           android:gravity="top"
           />

    <View
        style="@style/horizontal_gray_divider_line_style" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/sureText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:text="@string/ok"
            android:textColor="@color/red"
            android:textSize="@dimen/font16" />

        <View style="@style/vertical_gray_divider_line_style"/>

        <TextView
            android:id="@+id/cancelText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:text="@string/cancel"
            android:textColor="@color/mid_gray"
            android:textSize="@dimen/font16" />
    </LinearLayout>
</LinearLayout>