<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_custom_dialog"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <TextView
        android:id="@+id/title"
        style="@style/text_size_18_black_style"
        android:layout_marginTop="10dp"
        android:text="@string/title_alert" />


    <TextView
        android:id="@+id/message"
        style="@style/text_size_16_black_style"
        android:layout_margin="20dp"
        android:gravity="center" />

    <View
        style="@style/horizontal_gray_divider_line_style"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/positiveButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:text="@string/ok"
            android:textColor="@color/red"
            android:textSize="@dimen/font16"/>

        <View
            android:id="@+id/dividerView"
            style="@style/vertical_gray_divider_line_style" />

        <TextView
            android:id="@+id/negativeButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:text="@string/cancel"
            android:textColor="@color/mid_gray"
            android:textSize="@dimen/font16" />

    </LinearLayout>

</LinearLayout>